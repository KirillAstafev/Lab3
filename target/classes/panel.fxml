<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<VBox alignment="TOP_LEFT" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="com.lab.PanelController">
    <HBox VBox.vgrow="ALWAYS">
        <ComboBox fx:id="disksBox" onAction="#selChangedAction"/>
        <TextField fx:id="pathField" editable="false" HBox.hgrow="ALWAYS" />
        <Button text="Вверх" onAction="#btnPathUpAction"/>
    </HBox>
    <TableView fx:id="filesTable" VBox.vgrow="ALWAYS" onMouseClicked="#tableMouseClicked"/>

    <properties>
        <ctrl><fx:reference source="controller"/> </ctrl>
    </properties>
</VBox>
